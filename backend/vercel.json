{
    "version": 2,
    "buildCommand": "npm install",
    "functions": {
        "api/index.js": {
            "memory": 1024,
            "maxDuration": 30
        }
    },
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/api/index"
        }
    ],
    "env": [
        "MONGODB_URI",
        "JWT_SECRET",
        "OPENAI_API_KEY",
        "PINATA_API_KEY",
        "PINATA_API_SECRET",
        "PINATA_JWT"
    ]
}